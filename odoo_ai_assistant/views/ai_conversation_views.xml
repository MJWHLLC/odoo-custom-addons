<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- AI Conversation Form View -->
    <record id="view_ai_conversation_form" model="ir.ui.view">
        <field name="name">ai.conversation.form</field>
        <field name="model">ai.conversation</field>
        <field name="arch" type="xml">
            <form string="AI Conversation">
                <header>
                    <button name="generate_response" string="Generate Response" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('response', '!=', False)]}"/>
                    <field name="success" widget="badge" decoration-success="success == True" 
                           decoration-danger="success == False"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="conversation_type"/>
                            <field name="user_id" readonly="1"/>
                            <field name="document_type" attrs="{'invisible': [('conversation_type', 'not in', ['general', 'document'])]}"/>
                            <field name="jurisdiction" attrs="{'invisible': [('conversation_type', 'not in', ['general', 'document'])]}"/>
                        </group>
                        <group>
                            <field name="related_model" readonly="1"/>
                            <field name="related_record_id" readonly="1"/>
                            <field name="duration_ms" readonly="1" widget="integer"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </group>
                    <group string="Prompt">
                        <field name="prompt" nolabel="1" placeholder="Enter your question or request..."/>
                    </group>
                    <group string="Context Data" attrs="{'invisible': [('context_data', '=', False)]}">
                        <field name="context_data" nolabel="1" readonly="1"/>
                    </group>
                    <group string="Response" attrs="{'invisible': [('response', '=', False)]}">
                        <field name="response" nolabel="1" readonly="1"/>
                    </group>
                    <group string="Error" attrs="{'invisible': [('error_message', '=', False)]}">
                        <field name="error_message" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AI Conversation Tree View -->
    <record id="view_ai_conversation_tree" model="ir.ui.view">
        <field name="name">ai.conversation.tree</field>
        <field name="model">ai.conversation</field>
        <field name="arch" type="xml">
            <tree string="AI Conversations">
                <field name="create_date"/>
                <field name="title"/>
                <field name="conversation_type"/>
                <field name="user_id"/>
                <field name="success" widget="badge" decoration-success="success == True" decoration-danger="success == False"/>
                <field name="duration_ms" widget="integer"/>
            </tree>
        </field>
    </record>

    <!-- AI Conversation Search View -->
    <record id="view_ai_conversation_search" model="ir.ui.view">
        <field name="name">ai.conversation.search</field>
        <field name="model">ai.conversation</field>
        <field name="arch" type="xml">
            <search string="Search Conversations">
                <field name="title"/>
                <field name="prompt"/>
                <field name="user_id"/>
                <filter string="My Conversations" name="my_conversations" domain="[('user_id', '=', uid)]"/>
                <filter string="Successful" name="successful" domain="[('success', '=', True)]"/>
                <filter string="Failed" name="failed" domain="[('success', '=', False)]"/>
                <separator/>
                <filter string="General Q&amp;A" name="general" domain="[('conversation_type', '=', 'general')]"/>
                <filter string="Product Description" name="product" domain="[('conversation_type', '=', 'product_description')]"/>
                <filter string="Email" name="email" domain="[('conversation_type', '=', 'email')]"/>
                <filter string="Document" name="document" domain="[('conversation_type', '=', 'document')]"/>
                <filter string="Customer Support" name="support" domain="[('conversation_type', '=', 'customer_support')]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'conversation_type'}"/>
                    <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'create_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- AI Conversation Action -->
    <record id="action_ai_conversation" model="ir.actions.act_window">
        <field name="name">AI Conversations</field>
        <field name="res_model">ai.conversation</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_conversations': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start a conversation with AI Assistant
            </p>
            <p>
                Ask questions, generate content, or get assistance with your work.
            </p>
        </field>
    </record>
</odoo>
