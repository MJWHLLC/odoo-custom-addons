<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Template Form View -->
    <record id="view_product_template_form_inherit_ai" model="ir.ui.view">
        <field name="name">product.template.form.inherit.ai</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_generate_ai_description" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-magic"
                        string="AI Description"
                        help="Generate product description using AI"/>
            </xpath>
        </field>
    </record>
</odoo>
