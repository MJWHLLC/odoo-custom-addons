<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Menu -->
    <menuitem id="menu_vendor_importer_root"
              name="Vendor Importer"
              sequence="100"
              web_icon="vendor_product_importer,static/description/icon.png"/>

    <!-- Vendors Menu -->
    <menuitem id="menu_vendor_importer_vendors"
              name="Vendors"
              parent="menu_vendor_importer_root"
              sequence="10"/>

    <menuitem id="menu_vendor_config"
              name="Vendors"
              parent="menu_vendor_importer_vendors"
              action="action_vendor_config"
              sequence="10"/>

    <menuitem id="menu_import_logs"
              name="Import Logs"
              parent="menu_vendor_importer_vendors"
              action="action_vendor_import_log"
              sequence="20"/>

