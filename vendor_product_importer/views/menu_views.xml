    <menuitem id="menu_field_mappings"
              name="Field Mappings"
              parent="menu_vendor_importer_config"
              action="action_product_field_mapping"
              sequence="20"/>

    <!-- Products Menu -->
    <menuitem id="menu_vendor_products"
              name="Products"
              parent="menu_vendor_importer_root"
              sequence="20"/>

    <menuitem id="menu_imported_products"
              name="Imported Products"
              parent="menu_vendor_products"
              action="action_imported_products"
              sequence="10"/>

    <menuitem id="menu_product_vendor_info"
              name="Vendor Information"
              parent="menu_vendor_products"
              action="action_product_vendor_info"
              sequence="20"/>
